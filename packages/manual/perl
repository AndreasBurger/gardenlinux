#!/usr/bin/env bash
set -euo pipefail

. $(dirname $0)/.helper
debuild_args="${1:-}"

sudo apt-get build-dep -y --no-install-recommends $src
apt-get source $src

sudo apt-get remove -y --purge libdb5.3-dev libdb-dev
cd $src-*
patch -p1 < $srcDir/libdb.patch
dch -i 'remove libdb'
dch -r ''

donotmove="$(ls ..)"
debuild "${debuild_args}"
move_package .. $donotmove
