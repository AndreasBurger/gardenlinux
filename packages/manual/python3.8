#!/usr/bin/env bash
set -euo pipefail

. $(dirname $0)/.helper
debuild_args="${1:-}"

# preselect media-types
sudo apt-get install media-types
sudo apt-get build-dep -y --no-install-recommends $src
apt-get source $src

sudo apt-get remove -y --purge libdb5.3-dev
cd $src-*/
patch -p1 < $srcDir/libdb.patch
patch -p1 < $srcDir/media-types.patch
patch -p1 < $srcDir/testsuite.patch
dch -i 'remove libdb'
dch -a 'replace mime-support by media-types'
dch -a 'parse error on test for libpython3.8-testsuite fixed'
dch -r ''
debian/rules control-file

donotmove="$(ls ..)"
debuild "${debuild_args}"
move_package .. $donotmove

